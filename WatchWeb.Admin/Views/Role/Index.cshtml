@using WatchWeb.Service.Models.Dto;
@model IEnumerable<RoleSimpleDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Quản lý quyền</h6>
        <a href="role/create" class="btn btn-primary btn-icon-split">
            <span class="text">Tạo mới</span>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Mã Quyền
                        </th>
                        <th>
                            Tên Quyền
                        </th>
                        <th>
                            Trạng Thái
                        </th>
                        <th>Tương tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <div style="d-flex">
                                    @Html.ActionLink("Chi Tiết", "detail", "role", new { id = item.Id }
                                             , new { @class = "btn btn-info btn-icon-split text p-2" })
                                    @Html.ActionLink("Chỉnh Sửa", "update", "role", new { id = item.Id }
                                             , new { @class = "btn btn-warning btn-icon-split text p-2" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
